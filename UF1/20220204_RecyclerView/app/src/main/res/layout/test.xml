<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:orientation="horizontal"
android:layout_height="wrap_content"
>
    <View android:layout_width="match_parent"
        android:layout_height="40dp"
    android:id="@+id/actual_content"></View>
    <ImageView android:src="@drawable/background_tallable"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/actual_content"
        android:layout_alignBottom="@id/actual_content"
        android:layout_alignLeft="@id/actual_content"
        android:layout_alignRight="@id/actual_content"></ImageView>
</RelativeLayout>