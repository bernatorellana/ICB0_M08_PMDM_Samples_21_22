<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtTime"
        android:text="0.0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:textAlignment="center"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"/>
    <TextView android:text="Local"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_column="0"
        android:layout_row="1" />
    <TextView android:text="Visitant"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_column="1"
        android:layout_row="1" />
    <TextView
        android:id="@+id/txtLocalScore"
        android:text="0"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:textSize="80dp"
        android:textAlignment="center"
        android:layout_column="0"
        android:layout_row="2" />
    <TextView
        android:id="@+id/txtVistorScore"
        android:text="0"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:textSize="80dp"
        android:textAlignment="center"
        android:layout_column="1"
        android:layout_row="2" />
    <Button
        android:id="@+id/btnLocalUp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="+"
        android:textSize="70dp"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_margin="5dp"></Button>
    <Button
        android:id="@+id/btnVisitorUp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="+"
        android:textSize="70dp"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_margin="5dp"></Button>
    <Button
        android:id="@+id/btnLocalDown"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="-"
        android:textSize="70dp"
        android:layout_column="0"
        android:layout_row="4"
        android:backgroundTint="#ff0000"
        android:layout_margin="5dp"></Button>
    <Button
        android:id="@+id/btnVisitorDown"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="-"
        android:textSize="70dp"
        android:layout_column="1"
        android:layout_row="4"
        android:backgroundTint="#ff0000"
        android:layout_margin="5dp"></Button>
</GridLayout>