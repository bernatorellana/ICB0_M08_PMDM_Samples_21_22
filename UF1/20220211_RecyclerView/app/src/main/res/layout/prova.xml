<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:layout_alignLeft="@id/llyFitxa"
        android:layout_alignBottom="@id/llyFitxa"
        android:layout_alignTop="@id/llyFitxa"
        android:layout_alignRight="@id/llyFitxa"
        >
    </ImageView>
    <LinearLayout
        android:id="@+id/llyFitxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola Bon dia" android:textSize="48dp">
        </TextView>
    </LinearLayout>

</RelativeLayout>